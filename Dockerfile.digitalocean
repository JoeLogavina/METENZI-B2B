# DigitalOcean App Platform Dockerfile
FROM node:18-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Copy source code
COPY . .

# Create uploads directory
RUN mkdir -p uploads

# Expose port
EXPOSE 8080

# Set environment to production
ENV NODE_ENV=production

# Start the application using our production script
CMD ["node", "production-start.js"]