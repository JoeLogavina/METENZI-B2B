{
  "name": "b2b-service",
  "version": "1.0.0",
  "description": "B2B Portal Microservice",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "NODE_ENV=development tsx server/index.ts",
    "dev:client": "vite",
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build",
    "build:server": "esbuild server/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --packages=external --format=esm",
    "start": "NODE_ENV=production node dist/index.js"
  },
  "dependencies": {
    "@types/connect-pg-simple": "^7.0.3",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/passport": "^1.0.17",
    "@types/passport-local": "^1.0.39",
    "connect-pg-simple": "^10.0.0",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.5.2",
    "express": "^5.0.1",
    "express-session": "^1.18.1",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "tsx": "^4.19.2",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.1",
    "esbuild": "^0.24.2",
    "typescript": "^5.7.2",
    "vite": "^6.0.3"
  }
}