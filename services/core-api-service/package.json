{
  "name": "core-api-service",
  "version": "1.0.0",
  "description": "Core API Microservice for shared business logic",
  "type": "module",
  "scripts": {
    "dev": "NODE_ENV=development tsx server/index.ts",
    "build": "esbuild server/index.ts --bundle --platform=node --target=node18 --outfile=dist/index.js --packages=external --format=esm",
    "start": "NODE_ENV=production node dist/index.js",
    "db:push": "drizzle-kit push"
  },
  "dependencies": {
    "@neondatabase/serverless": "^0.11.1",
    "@types/express": "^5.0.0",
    "drizzle-kit": "^0.30.1",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.5.2",
    "express": "^5.0.1",
    "tsx": "^4.19.2",
    "ws": "^8.18.0",
    "zod": "^3.24.1",
    "zod-validation-error": "^3.4.0"
  },
  "devDependencies": {
    "esbuild": "^0.24.2",
    "typescript": "^5.7.2"
  }
}